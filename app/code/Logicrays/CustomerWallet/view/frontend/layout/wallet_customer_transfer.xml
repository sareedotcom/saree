<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
<update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
                <action method="setPageTitle">
                    <argument translate="true" name="title" xsi:type="string">My Wallet -&gt; Money Transfer</argument>
                </action>
        </referenceBlock>
        <referenceBlock name="customer-account-navigation-custom">
            <arguments>
                <argument name="is_highlighted" xsi:type="boolean">true</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Logicrays\CustomerWallet\Block\CustomerWallet"
            cacheable="false" ifconfig="customerwallet/general/enabled"
            name="customer_wallet_transfer"
            template="Logicrays_CustomerWallet::transfer.phtml">

                <block class="Logicrays\CustomerWallet\Block\WalletTransfer"
                    name="customers-wallet-transfer-to-others" as="customers_wallet_transfer_to_others"
                    template="Logicrays_CustomerWallet::walletTransfer.phtml" cacheable="false"/>

                <block class="Logicrays\CustomerWallet\Block\CustomerWallet"
                name="customers-wallet-details" as="customers_wallet_details"
                template="Logicrays_CustomerWallet::wallet_details.phtml" cacheable="false"/>
            </block>
        </referenceContainer>
    </body>
</page>