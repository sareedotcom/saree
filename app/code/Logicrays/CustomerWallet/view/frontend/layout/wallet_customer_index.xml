<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
<update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Wallet</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Logicrays\CustomerWallet\Block\CustomerWallet" cacheable="false" ifconfig="customerwallet/general/enabled" name="customerwallet_dashboard"
                template="Logicrays_CustomerWallet::wallet.phtml">

                <block class="Logicrays\CustomerWallet\Block\Transaction"
                name="customers-wallet-transactions" as="customers_wallet_transactions"
                template="Logicrays_CustomerWallet::transactoins.phtml" cacheable="false"/>

                <block class="Logicrays\CustomerWallet\Block\CustomerWallet"
                name="customers-wallet-details" as="customers_wallet_details"
                template="Logicrays_CustomerWallet::wallet_details.phtml" cacheable="false"/>
            </block>
        </referenceContainer>
    </body>
</page>
