<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
   <acl>
      <resources>
         <resource id="Magento_Backend::admin">
            <resource id="Magento_Backend::stores">
               <resource id="Magento_Backend::stores_settings">
                  <resource id="Magento_Config::config">
                     <resource id="Logicrays_CustomerWallet::config_customerwallet" title="Customer Wallet Config"/>
                  </resource>
               </resource>
            </resource>
            <resource id="Logicrays_CustomerWallet::customerwallet" title="Customer Wallet" sortOrder="50">
               <resource id="Logicrays_CustomerWallet::requests" title="Manage Wallet Request" sortOrder="10"/>
               <resource id="Logicrays_CustomerWallet::customerwallet_massapprove" title="Mass Approve Request" sortOrder="20"/>
               <resource id="Logicrays_CustomerWallet::customerwallet_approve" title="Approve Request" sortOrder="30"/>
               <resource id="Logicrays_CustomerWallet::customerwallet_cancel" title="Cancel Request" sortOrder="40"/>
               <resource id="Logicrays_CustomerWallet::adjust_amount" title="Adjust Wallet Amount" sortOrder="50"/>
               <resource id="Logicrays_CustomerWallet::adjustamount_save" title="Adjust Amount Save" sortOrder="50"/>
            </resource>
         </resource>
      </resources>
   </acl>
</config>
