<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Pits_GiftWrap::css/giftWrap.css"/>
    </head>
    <referenceBlock name="checkout.cart.totals">
        <arguments>
            <argument name="jsLayout" xsi:type="array">
                <item name="components" xsi:type="array">
                    <item name="block-totals" xsi:type="array">
                        <item name="children" xsi:type="array">
                            <item name="fee" xsi:type="array">
                                <item name="component" xsi:type="string">Pits_GiftWrap/js/view/checkout/cart/totals/fee</item>
                                <item name="sortOrder" xsi:type="string">20</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Pits_GiftWrap/checkout/cart/totals/fee</item>
                                    <item name="title" xsi:type="string" translate="true">Gift Wrapping Fee</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </arguments>
    </referenceBlock>
    <referenceBlock name="additional.product.info">
        <block class="Pits\GiftWrap\Block\Checkout\Cart\GiftWrap" name="checkout.cart.item.gift.wrap"
               template="Pits_GiftWrap::checkout/cart/item/giftWrap.phtml" ifconfig="pits_gift_wrap/general/enable"/>
    </referenceBlock>
</page>
