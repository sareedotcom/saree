<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <pits_gift_wrap>
            <general>
                <enable>1</enable>
                <fee>10</fee>
                <title>GIFT WRAP</title>
                <cart_wrap_title>Cart Wrap</cart_wrap_title>
                <show_summary>1</show_summary>
                <item_wrap_note>By checking this option, we will wrap this product as gift.</item_wrap_note>
                <cart_wrap_note>By checking this option, we will wrap the whole cart as gift.</cart_wrap_note>
                <fee_label>Gift Wrapping Fee</fee_label>
                <gift_message_label>Add Gift Message</gift_message_label>
            </general>
        </pits_gift_wrap>
    </default>
</config>