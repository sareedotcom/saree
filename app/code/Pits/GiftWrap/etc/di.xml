<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Pits\GiftWrap\Api\WrapRepositoryInterface" type="Pits\GiftWrap\Model\ResourceModel\WrapRepository"/>
    <preference for="Pits\GiftWrap\Api\Data\WrapInterface" type="Pits\GiftWrap\Model\Wrap"/>
    <type name="Magento\Quote\Api\CartRepositoryInterface">
        <plugin name="cart_gift_wrap_details" type="Pits\GiftWrap\Plugin\CartRepositoryPlugin" sortOrder="500"/>
    </type>
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="order_gift_wrap_details" type="Pits\GiftWrap\Plugin\OrderRepositoryPlugin"/>
    </type>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="sales_order_grid_data_source"
                      xsi:type="string">Pits\GiftWrap\Model\ResourceModel\Order\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Pits\GiftWrap\Model\ResourceModel\Order\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">sales_order_grid</argument>
            <argument name="resourceModel" xsi:type="string">Magento\Sales\Model\ResourceModel\Order</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\FilterApplierInterface">
        <plugin name="sales_order_grid_filter_modifier" type="Pits\GiftWrap\Plugin\UiComponent\DataProvider\FilterApplier"/>
    </type>
    <type name="Magento\Sales\Api\OrderManagementInterface">
        <plugin name="gift_wrap_OrderManagement_Plugin" type="Pits\GiftWrap\Plugin\OrderManagementInterfacePlugin" sortOrder="10" disabled="false"/>
    </type>
</config>
