<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="pits" translate="label" sortOrder="110">
            <label>PITS Configuration</label>
        </tab>
        <section id="pits_gift_wrap" sortOrder="410" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Gift Wrap</label>
            <tab>pits</tab>
            <resource>Pits_GiftWrap::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[Enable/Disable Gift Wrap Module]]>
                    </comment>
                </field>
                <field id="fee" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Gift Wrap Fee</label>
                    <validate>validate-number required-entry</validate>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                    <comment>Fee for the Gift Wrap</comment>
                </field>
                <field id="title" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[Gift Wrap Checkbox Label]]>
                    </label>
                    <comment>
                        <![CDATA[Label for the Gift Wrap Checkbox]]>
                    </comment>
                </field>
                <field id="show_summary" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[Show in Cart Summary]]>
                    </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="cart_wrap_title" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[Cart Wrap Label]]>
                    </label>
                    <comment>
                        <![CDATA[Label for the checkbox to wrap whole cart]]>
                    </comment>
                </field>
                <field id="gift_message_label" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[Gift Message Label]]>
                    </label>
                    <comment>
                        <![CDATA[Label for the checkbox to add gift message]]>
                    </comment>
                </field>
                <field id="item_wrap_note" translate="label comment" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[Cart Item Wrapping Note]]>
                    </label>
                    <comment>
                        <![CDATA[Note for each items in cart]]>
                    </comment>
                </field>
                <field id="cart_wrap_note" translate="label comment" type="textarea" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[Cart Wrap Note]]>
                    </label>
                    <comment>
                        <![CDATA[Note for cart wrap field in cart summary]]>
                    </comment>
                </field>
                <field id="fee_label" translate="label comment" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[Totals Wrapping Fee Label]]>
                    </label>
                    <comment>
                        <![CDATA[Label for the wrapping fee in cart totals]]>
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>