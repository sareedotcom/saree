<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="order_gift_wrap" resource="default" engine="innodb" comment="Gift Wrap Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="ID"/>
        <column xsi:type="varchar" name="message" nullable="true" length="250" comment="Message"/>
        <column xsi:type="varchar" name="price" nullable="true" length="250" comment="Price"/>
        <column xsi:type="varchar" name="store_price" nullable="true" length="250" comment="Store Price"/>
        <column xsi:type="int" name="is_whole_order" padding="10" unsigned="true" nullable="false"
                default="0"
                comment="Whether item level or whole cart"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="quote">
        <column xsi:type="varchar" name="gift_wrap_data" nullable="true" length="255" comment="Gift Wrap Information"/>
    </table>
    <table name="sales_order">
        <column xsi:type="varchar" name="gift_wrap_data" nullable="true" length="255" comment="Gift Wrap Information"/>
        <column xsi:type="decimal" name="gift_wrap_canceled" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Gift Wrap Canceled"/>
        <column xsi:type="decimal" name="gift_wrap_invoiced" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Gift Wrap Invoiced"/>
        <column xsi:type="decimal" name="base_gift_wrap_invoiced" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Base Gift Wrap Invoiced"/>
        <column xsi:type="decimal" name="gift_wrap_refunded" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Gift Wrap Refunded"/>
        <column xsi:type="decimal" name="base_gift_wrap_refunded" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Base Gift Wrap Refunded"/>
    </table>
    <table name="sales_invoice" resource="sales" engine="innodb" comment="Sales Flat Invoice">
        <column xsi:type="decimal" name="giftwrap_fee" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Gift Wrap Amount"/>
        <column xsi:type="decimal" name="base_giftwrap_fee" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Base Gift Wrap Amount"/>
    </table>
    <table name="sales_creditmemo" resource="sales" engine="innodb" comment="Sales Flat Creditmemo">
        <column xsi:type="decimal" name="giftwrap_fee" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Gift Wrap Amount"/>
        <column xsi:type="decimal" name="base_giftwrap_fee" scale="4" precision="20" unsigned="false" nullable="true"
                comment="Base Gift Wrap Amount"/>
    </table>
</schema>
