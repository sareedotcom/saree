<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="category" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Category Page</label>
        <field id="categoryPagePreview" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Preview page layout</label>
            <frontend_model>Swissup\ThemeEditorArgentoHome\Block\Adminhtml\System\Config\Form\Field\CategoryPagePreview</frontend_model>
        </field>
        <field id="page_layout" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Layout</label>
            <source_model>Swissup\ThemeEditor\Model\Config\Source\Layout</source_model>
            <backend_model>Swissup\ThemeEditorArgentoHome\Model\Config\Backend\CategoryPageLayout</backend_model>
        </field>
        <field id="content_width" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Content width</label>
            <source_model>Swissup\ThemeEditor\Model\Config\Source\ContentWidth</source_model>
            <backend_model>Swissup\ThemeEditorArgentoHome\Model\Config\Backend\CategoryContentWidth</backend_model>
        </field>
        <field id="max_width" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Max width</label>
            <comment>Max allowed width for page content in px. Page content doesn't include header, footer and breadcrumbs.</comment>
            <depends>
                <field id="content_width">limited_width</field>
            </depends>
        </field>
        <field id="description_position" translate="label" type="select" sortOrder="32" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Description position</label>
            <source_model>Swissup\ThemeEditor\Model\Config\Source\Category\DescriptionDestination</source_model>
            <backend_model>Swissup\ThemeEditorArgentoHome\Model\Config\Backend\Category\MoveDescription</backend_model>
        </field>
        <field id="layered_navigation_position" translate="label" type="select" sortOrder="34" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Layered Navigation position</label>
            <source_model>Swissup\ThemeEditor\Model\Config\Source\Category\LayeredNavigationDestination</source_model>
            <backend_model>Swissup\ThemeEditorArgentoHome\Model\Config\Backend\Category\MoveLayeredNavigation</backend_model>
        </field>
        <field id="list_mode" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Products list mode</label>
            <source_model>Magento\Catalog\Model\Config\Source\ListMode</source_model>
            <config_path>catalog/frontend/list_mode</config_path>
        </field>
        <group id="grid" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Grid Mode</label>
            <field id="per_page_values" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Products per Page Allowed Values</label>
                <comment>Comma-separated.</comment>
                <validate>validate-per-page-value-list required-entry</validate>
                <config_path>catalog/frontend/grid_per_page_values</config_path>
            </field>
            <field id="per_page" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Products per Page Default Value</label>
                <comment>Must be in the allowed values list</comment>
                <validate>validate-per-page-value</validate>
                <config_path>catalog/frontend/grid_per_page</config_path>
            </field>
            <field id="columns_count" translate="label comment" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Columns per Row</label>
                <comment><![CDATA[<b>Min width</b> - min width of a screen where columns number must be applied.<br /><b>Columns</b> - columns count itself.<br /><b>Spacing</b> - spacing between cells in grid. For Home it is "6".]]></comment>
                <frontend_model>Swissup\ThemeEditor\Block\Adminhtml\System\Config\Form\Field\ColumnsCount</frontend_model>
                <backend_model>Swissup\ThemeEditorArgentoHome\Model\Config\Backend\CategoryColumnsCount</backend_model>
            </field>
        </group>
        <group id="list" translate="label" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>List Mode</label>
            <field id="per_page_values" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Products per Page Allowed Values</label>
                <comment>Comma-separated.</comment>
                <validate>validate-per-page-value-list required-entry</validate>
                <config_path>catalog/frontend/list_per_page_values</config_path>
            </field>
            <field id="per_page" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Products per Page Default Value</label>
                <comment>Must be in the allowed values list</comment>
                <validate>validate-per-page-value</validate>
                <config_path>catalog/frontend/list_per_page</config_path>
            </field>
        </group>
    </group>
</include>
